<p id="notice"><%= notice %></p>

<h1>User Infomation</h1>
<hr>

<div class="user_profile">
  <div class="login_user_icon">
    <% login_user = User.find(current_user.id)%>
    <%= image_tag(login_user.icon) %>
  </div>

  <div class="login_user_comment">
    <div class="login_user_name">
      <h2><%= login_user.name%></h2>
    </div>
  </div>
</div>

<h1>Pictures</h1>
<hr>
<table>
  <thead>
    <tr>
      <th>投稿者</th>
      <th>Title</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pictures.each do |picture| %>
        <tr>
          <td>
            <div class="picture_field">
            <% user_info = User.find(picture.user_id)%>
            <P><%= user_info.name%></P>
            </div>
          </td>
          <td>
            <div class="picture_field">
            <%= picture.title %>
            </div>
          </td>
          <td>
            <div class="picture_field">
            <%= picture.comment %>
            </div>
          </td>
          <td>
            <div class="picture_field">
              <%= link_to 'Show', picture %>
            </div>
          </td>
          <% if picture.user_id == current_user.id %>
            <td>
              <div class="picture_field">
              <%= link_to 'Edit', edit_picture_path(picture) %>
              </div>
            </td>
            <td>
              <div class="picture_field">
              <%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </td>
          <%end%>
        </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Picture', new_picture_path %>
