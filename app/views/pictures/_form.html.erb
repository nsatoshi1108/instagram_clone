<%= form_with(model: picture, local: true, url:confirm_pictures_path) do |form| %>
  <% if picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

      <ul>
      <% picture.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= form.label :img %>
     <%= image_tag(@picture.img.url) if @picture.img.url %>
    <%= form.file_field :img, id: :picture_img %>
  </div>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :picture_title %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_area :comment, id: :picture_comment %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
